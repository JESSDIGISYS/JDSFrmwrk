{
  "name": "jds/frmwrk",
  "description": "Basic Framework with Authorization, Events, Migrations, Middleware, CSRF Tokens and JWT tokens. Only to be used by [JDS](https://jessdigisys.com) (Jessop Digital Systems) or for Educational Purposes. Not for Production Use!",
  "authors": [
    {
      "name": "Mr J",
      "email": "phpdeveloper@mail.com",
      "role": "Owner, Developer"
    }
  ],
  "minimum-stability": "stable",
  "license": "bsd-3-clause",
  "autoload": {
    "psr-4": {
      "JDS\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "ext-pdo": "*",
    "nikic/fast-route": "^1.3",
    "psr/container": "^2.0",
    "league/container": "^4.2",
    "twig/twig": "^v3.8",
    "psr/event-dispatcher": "^1.0",
    "doctrine/dbal": "^4.0",
    "firebase/php-jwt": "^6.10",
    "paragonie/sodium_compat": "^2.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.0",
    "phpunit/phpunit": "^10.5",
    "pestphp/pest": "^v2.34"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }

}
